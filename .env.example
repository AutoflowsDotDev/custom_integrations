# Gmail API Configuration
GOOGLE_CLIENT_SECRETS_JSON_PATH='path/to/your/client_secret.json' # Path to the OAuth 2.0 client secrets file
GOOGLE_CREDENTIALS_JSON_PATH='path/to/your/credentials.json' # Path where OAuth 2.0 tokens will be stored
GOOGLE_SERVICE_ACCOUNT_PATH='path/to/your/service_account.json' # Path to service account key file (recommended for server deployments)
GMAIL_USER_ID='me' # Typically 'me' for the authenticated user
GMAIL_LABEL_URGENT='URGENT_AI' # Label name to apply to urgent emails

# Google Cloud Pub/Sub Configuration
GOOGLE_CLOUD_PROJECT_ID='your-gcp-project-id'
GOOGLE_PUBSUB_TOPIC_ID='your-gmail-topic-id' # Topic to which Gmail notifications are published
GOOGLE_PUBSUB_SUBSCRIPTION_ID='your-gmail-subscription-id' # Subscription to pull notifications from

# Slack API Configuration
SLACK_BOT_TOKEN='xoxb-your-slack-bot-token'
SLACK_CHANNEL_ID='your-slack-channel-id' # Channel ID to send notifications to

# AI Service Configuration
# If using OpenRouter API (default)
OPENROUTER_API_KEY='your-openrouter-api-key' # Get from https://openrouter.ai/
OPENROUTER_API_URL='https://openrouter.ai/api/v1/chat/completions' # Optional: can be left as default

# If using other AI services, add their API keys here
# OPENAI_API_KEY='sk-your-openai-api-key'

# Application Configuration
LOG_LEVEL='INFO' # e.g., DEBUG, INFO, WARNING, ERROR

# API Server Configuration
API_KEY='your-api-key' # Secret key for API authentication
API_DEBUG=false # Set to true for development environment
API_CORS_ORIGINS='*' # Comma-separated list of allowed origins for CORS
API_HOST='0.0.0.0' # Host to bind the server to
API_PORT=8000 # Port to bind the server to 